<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_onSurface_highContrast"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listas de la comunidad"
        android:textColor="@color/md_theme_background"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="199dp"
        android:background="@color/md_theme_inverseSurface"
        android:backgroundTint="@color/md_theme_inverseSurface"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="197dp"
            app:srcCompat="@drawable/pris" />

        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="198dp"
            android:background="@color/md_theme_inverseSurface"
            android:backgroundTint="@color/md_theme_inverseSurface"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="175dp"
                android:layout_height="24dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#1C1C1C"
                android:text="Las mejores peliculas"
                android:textColor="@color/md_theme_background"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="15dp"
                    android:layout_height="12dp"
                    app:srcCompat="@android:drawable/ic_menu_recent_history" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="93dp"
                    android:layout_height="11dp"
                    android:backgroundTint="@color/md_theme_onSurface_highContrast"
                    android:text="14h 15' • 16/2/2021"
                    android:textColor="@color/md_theme_background"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15dp"
                    android:layout_height="12dp"
                    android:src="@drawable/acc" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="180dp"
                    android:layout_height="11dp"
                    android:layout_weight="1"
                    android:text="Pepe"
                    android:textColor="@color/md_theme_background"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="201dp"
        android:background="@color/md_theme_inverseSurface"
        android:backgroundTint="@color/md_theme_inverseSurface"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bat"
            tools:ignore="DuplicateIds" />

        <LinearLayout
            android:layout_width="259dp"
            android:layout_height="198dp"
            android:backgroundTint="@color/md_theme_scrim"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="175dp"
                android:layout_height="24dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#1C1C1C"
                android:text="Las del murcielago "
                android:textColor="@color/md_theme_background"
                android:textSize="16sp"
                tools:ignore="DuplicateIds" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="15dp"
                    android:layout_height="12dp"
                    app:srcCompat="@android:drawable/ic_menu_recent_history"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="93dp"
                    android:layout_height="11dp"
                    android:backgroundTint="@color/md_theme_onSurface_highContrast"
                    android:text="34h 15' • 16/2/2023"
                    android:textColor="@color/md_theme_background"
                    android:textSize="10sp"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15dp"
                    android:layout_height="12dp"
                    android:src="@drawable/acc"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="180dp"
                    android:layout_height="11dp"
                    android:layout_weight="1"
                    android:text="ElRatoncomEsternocleidosmastoideos"
                    android:textColor="@color/md_theme_background"
                    android:textSize="10sp"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="81dp"
        android:background="@color/md_theme_inversePrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/acc"
                app:srcCompat="@android:drawable/ic_menu_search" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explorar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/acc"
                app:srcCompat="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foro" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/acc" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>